@model NaproKarta.ViewModels.AuxiliaryVMs.ObservationCellInChartVM

<table class="chartCellContent" name="RowCol" value="@Model.RowCol" onclick="@("window.location.href='" + @Url.Action("Edit", "Observation",new { id=Model.ID, RowCol=Model.RowCol }) + "'");">
    <tr>
        <td style="background-color: beige;">
            <img  style="width: 50px; height: auto;" src="@Model.MarkerUrl" alt="@Model.MarkerAltText" />
            </td>
    </tr>
    <tr><td class="chartCellContent date">@Html.Raw(Model.Date)</td></tr>
    <tr><td class="chartCellContent">@Html.Raw(Model.Letter)</td></tr>
    <tr><td class="chartCellContent">@Html.Raw(Model.NumTimes)</td></tr>
    <tr><td class="chartCellContent">@Html.Raw(Model.CipherAndCipherCD)</td></tr>
    <tr><td class="chartCellContent">@Html.Raw(Model.Comments)</td></tr>
    <tr>
        <td>
            <table>
                <tr>
                    @{
                       int i = 0;
                       foreach (string noteMark in Model.NoteMarks)
                       {
                        <td class="chartCellContent" style="@Model.NoteMarksBackgroundColors[i]"><div>@Html.Raw(noteMark)</div></td>
                           i++;
                       }
                    }
                </tr>
            </table>
        </td>
    </tr>
</table>
