@model NaproKarta.ViewModels.ChartVM

<div class="form-horizontal">
    <hr />
    <div class="panel panel-danger">
        <div class="panel-heading"><h2>Delete Chart</h2></div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(model => model.Chart.Name, htmlAttributes: new { @class = "col-lg-2 text-right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Chart.Name, new { htmlAttributes = new { @class = " col-lg-2 text-left" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Chart.Note, htmlAttributes: new { @class = " col-lg-2 text-right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Chart.Note, new { htmlAttributes = new { @class = " col-lg-2 text-left" } })
                </div>
            </div>
            @using (Html.BeginForm())
            {
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.User.ID)
                @Html.HiddenFor(m => m.Chart.ID)

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="button" value="Delete Chart" class="btn btn-lg btn-danger" />
                    <input type="submit" name="button" value="Cancel" class="btn btn-lg btn-default" />
                </div>
            </div>
            }
        </div>
    </div>
</div>


