@model NaproKarta.ViewModels.ObservationEditVM
<div class=" groupBox">
    <table class="propertiesHeight">
        <tr>
            @foreach (var col in Model.LettersTwoColumns)
            {
            <td style="padding: 5px; vertical-align: top; height: 50%">
                <table>
                    @foreach (var item in col)
                    {
                    <tr>
                        <td style="text-align: left; padding-right: 15px">
                            <label style="padding: 1px; margin: 1px">
                                @Html.RadioButtonFor(x => x.Observation.Letter.Value.Value, item)
                                @item
                            </label>
                        </td>
                    </tr>
                    }
                </table>
            </td>
            }
        </tr>
        <tr>
            <td style="padding: 5px; height: 20%">
                <label>
                    @Html.CheckBoxFor(m => m.Observation.Letter.IsB, new { @checked = "checked" })
                    &nbsp; B
                </label>
                @*<div class="checkbox">
                        <label><input type="checkbox" val="">@Html.DisplayNameFor(Model => Model.Observation.Letter.IsB)</label>
                    </div>*@
            </td>
            <td></td>
        </tr>
        <tr><td></td><td></td></tr>
    </table>
</div>